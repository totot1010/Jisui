{
  "name": "backend",
  "scripts": {
    "dev": "tsx watch ./src/index.ts",
    "build": "tsc",
    "start": "node ./dist/index.js",
    "test": "dotenv -e .env.test -- prisma migrate dev --skip-seed && dotenv -e .env.test -- vitest",
    "prisma:studio": "prisma studio",
